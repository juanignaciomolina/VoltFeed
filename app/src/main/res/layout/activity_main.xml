<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/quickreturn_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/main_toolbar"
            layout="@layout/toolbar"/>

        <com.droidko.voltfeed.ui.widget.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/guideline_yellow"
            android:background="@color/action_bar_gray"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/support_elevation"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/support_elevation"/>

    </LinearLayout>

</RelativeLayout>