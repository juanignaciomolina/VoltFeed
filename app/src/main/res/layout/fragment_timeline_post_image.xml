<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/timelinePost">

        <ImageView
            android:id="@+id/post_color_column"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/post_lateral_image"
            android:paddingBottom="2dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/timeline_post_image_header"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:paddingTop="4dp"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="6dp"
                android:layout_marginBottom="6dp">

                <!-- date -->
                <TextView
                    android:id="@+id/timeline_post_image_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/post_date"
                    android:textSize="12sp"
                    android:gravity="right|end|center"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeline_post_image_container"
                android:layout_below="@id/timeline_post_image_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <TextView
                    android:id="@+id/timeline_post_image_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:textColor="@color/font_dark"
                    android:ellipsize="end"/>

                <!-- post picture image -->
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/timeline_post_image_picture"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="post picture"
                    android:scaleType="centerCrop"
                    background="@color/general_placeholder"
                    fresco:roundedCornerRadius="3dp"
                    fresco:roundWithOverlayColor="@color/general_card_background"
                    fresco:placeholderImage="@color/general_placeholder"
                    fresco:progressBarImage="@drawable/timeline_spinner"
                    fresco:progressBarImageScaleType="centerInside"
                    fresco:progressBarAutoRotateInterval="1500"
                    fresco:failureImage="@drawable/ic_network_error"
                    fresco:failureImageScaleType="centerInside"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_volt"/>

                        <TextView
                            android:id="@+id/timeline_post_image_volt_count"
                            style="@style/flatText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7456"/>

                    </LinearLayout>

                    <!-- fav icon-->
                    <TextView
                        android:id="@+id/timeline_post_image_volt_button"
                        style="@style/flatButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/volt"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>