<resources>

    <!-- MAIN THEME -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/pallete_green</item>
        <item name="colorPrimaryDark">@color/pallete_green_dark</item>
        <item name="colorAccent">@color/pallete_red</item>
    </style>

    <!-- MAIN DIALOG STYLE -->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/pallete_red</item>
        <item name="android:textColorPrimary">@color/pallete_green</item>
        <item name="android:background">@color/background_material_light</item>
    </style>

    <!-- REGULAR BUTTON -->
    <style name="button.regular" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_tiny</item>
        <item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:background">@drawable/button_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_0</item>
    </style>

    <!-- BLUE BUTTON -->
    <style name="button.blue" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_tiny</item>
        <item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_0</item>
    </style>

    <!-- REGULAR EDIT TEXT-->
    <style name="editText.regular" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editText_height</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <!-- Start of VOLT BAR -->
        <!-- VOLT FLAT BUTTON -->
        <style name="flatButton">
            <item name="android:background">@drawable/selector_button_flat</item>
            <item name="android:paddingLeft">@dimen/spacing_tiny</item>
            <item name="android:paddingRight">@dimen/spacing_tiny</item>
            <item name="android:textColor">@color/font_light</item>
            <item name="android:textStyle">bold</item>
            <item name="android:gravity">center</item>
        </style>

        <style name="flatButton.idea">
            <item name="android:background">@drawable/selector_button_flat_new_idea</item>
        </style>

        <!-- VOLTS COUNTER -->
        <style name="flatText">
            <item name="android:paddingLeft">@dimen/spacing_tiny</item>
            <item name="android:paddingRight">@dimen/spacing_tiny</item>
            <item name="android:textColor">@color/gray_2</item>
            <item name="android:gravity">center</item>
        </style>
    <!-- End of VOLT BAR -->

    <!-- Start of TIMELINE POST -->
        <!-- POST BACKGROUND -->
        <style name="timelinePost">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/background_card</item>
        </style>
    <!-- End of TIMELINE POST -->

    <!-- Start of FULL SCREEN ACTIVITY -->
        <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowBackground">@null</item>
            <item name="metaButtonBarStyle">@style/ButtonBar</item>
            <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
        </style>

        <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
        <style name="ButtonBar">
            <item name="android:paddingLeft">2dp</item>
            <item name="android:paddingTop">5dp</item>
            <item name="android:paddingRight">2dp</item>
            <item name="android:paddingBottom">0dp</item>
            <item name="android:background">@android:drawable/bottom_bar</item>
        </style>

        <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
        <style name="ButtonBarButton"/>
    <!-- End of FULL SCREEN ACTIVIY-->


</resources>
